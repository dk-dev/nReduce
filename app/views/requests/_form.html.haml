.row
  .span5.offset4
    = semantic_form_for @request, :html => {:class => 'form-vertical'} do |f|
      = hidden_field_tag "request[request_type]", @request.request_type.first.to_s
      - unless @request.request_type_s == 'retweet'
        .control-group{error_css(@request, :title)}
          = f.label :title, :class => 'control-label'
          .controls
            = f.text_field :title, :class => 'span5'
            = f.semantic_errors :title

      .control-group.data{error_css(@request, :data)}
        = f.semantic_errors :data

      - c = 0
      - @request.questions.each do |q|
        .control-group
          = f.label :data, q, :class => 'control-label taskheader'
          .controls
            = text_field_tag "request[data][#{c}]", @request.data[c], :class => 'span5', :placeholder =>  @request.request_type_s == 'retweet' ? 'https://twitter.com/nReduce/status/274112721451102208' : ''
        - c += 1
      - if @request.request_type_s == 'retweet'
        .tutorial_link
          Need help finding the 
          = link_to 'URL of a Tweet?', twitter_url_path

      %table.pricing
        %tr.labels
          %td= f.label :num, 'Desired Reach', :class => 'control-label'
          %td{:align => 'right'}= label_tag 'Rate Per 100 Reached'
          %td &nbsp;
          %td= label_tag 'Total Cost'
        %tr.select_row
          %td{:valign => 'center'}
            .control-group{error_css(@request, :num)}
              .controls
                = f.select :num, options_for_select(1.upto(10).map{|i| ["#{i * 100} Followers",i] }, @request.num), {}, {:class => 'num'}
                = f.semantic_errors :num
          %td
            .right= image_tag 'headercoin.png'
            .right.coin 1
            .clear
          %td.equals =
          %td
            .left.coin= @request.total_price
            .left= image_tag 'headercoin.png'
            .clear
        %tr.line
          %td{:colspan => 4}
            %hr/
        %tr
          %td{:colspan => 2, :align => 'right'} Current Balance
          %td.equals =
          %td
            .left.coin= @request.startup.balance
            .left= image_tag 'headercoin.png'
            .clear

        %tr
          %td{:colspan => 2, :align => 'right'} Sufficient Funds
          %td.equals =
          %td.has_balance
            - if @request.startup_has_balance?
              .yes Yes
            - else
              .left.no No
              -#.left= link_to 'Buy', '#'
              .left= link_to 'Earn', '/work_room?earn=1', :class => 'btn btn-success'
              .clear

      .control-group.submit_btn
        .controls.center
          - if @request.startup_has_balance?
            = f.submit 'Post Request', :class => 'btn btn-large btn-success'
          - else
            = link_to 'Post Request', '#', :class => 'btn btn-large btn-disabled', :disabled => true